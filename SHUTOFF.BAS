SCREEN 12
MAIN:
X = 0
CLS
DO
RANDOMIZE TIMER
LINE (0, 0)-(640, 480), RND * 15, BF
PSET (RND * 640, RND * 480), RND * 15
SOUND INT(RND * 3000) + 37, 3
LOOP UNTIL INKEY$ <> ""

'MAKES THE SCREEN TO A LINE
Y = 480
FOR I = 1 TO 240
LINE (0, X)-(640, X), 0
X = X + 1

FOR w = 1 TO 1024
NEXT

LINE (0, Y)-(640, Y), 0
Y = Y - 1

NEXT I

'MAKES THELINE TO A DOT
X = 0
Y = 640
FOR w = 1 TO 2048
NEXT

FOR I = 1 TO 320
PSET (X, 240), 0
X = X + 1

PSET (Y, 240), 0
Y = Y - 1

NEXT I
